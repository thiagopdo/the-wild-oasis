{
  "compilerOptions": {
    "baseUrl": "./src/**/*",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "checkJs": false
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
